{
  // Tailwind CSS IntelliSense
  "tailwindCSS.experimental.classRegex": [
    ["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
    ["cx\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"]
  ],
  "tailwindCSS.includeLanguages": {
    "typescript": "javascript",
    "typescriptreact": "javascript"
  },
  "tailwindCSS.experimental.configFile": "tailwind.config.ts",
  "tailwindCSS.colorDecorators": true,

  // Color Highlight - Show color squares next to hex/rgb/hsl values
  "color-highlight.enable": true,
  "color-highlight.markerType": "dot-before",
  "color-highlight.matchWords": true,
  "color-highlight.matchRgba": true,
  "color-highlight.matchHex": true,
  "color-highlight.matchHsl": true,

  // CSS - Enable color decorators for CSS custom properties
  "css.colorDecorators.enable": true,
  "scss.colorDecorators.enable": true,

  // Editor - Color picker support
  "editor.colorDecorators": true,
  "editor.quickSuggestions": {
    "strings": true
  }
}
