# Commission Tracker Environment Configuration Template
# Copy this file to .env and configure for your environment

# Development Strategy - Choose one:
# Local PostgreSQL: VITE_USE_LOCAL=true
# Supabase Cloud:   VITE_USE_LOCAL=false (or remove this line)
VITE_USE_LOCAL=true

# API Configuration
VITE_API_URL=http://localhost:3001

# Supabase Configuration (used when VITE_USE_LOCAL=false)
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# User Configuration (optional)
USER_ID=your_user_id
USER_EMAIL=your_email@example.com

# Local PostgreSQL Database (used by server.js when running locally)
DB_HOST=localhost
DB_PORT=54322
DB_NAME=postgres
DB_USER=postgres
DB_PASS=postgres

# Development
NODE_ENV=development